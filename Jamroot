project crc
  : requirements
    <link>static
    <cxxflags>-std=c++11
    <debug-symbols>on
  : default-build
  : build-dir bin
  ;

import testing ;

alias table
  : # sources
    table//table
  ;

alias crc
  : # sources
    /boost//headers
    table
  : # requirements
    <include>include
  : # default-build
  : # usage-requirements
    <include>include
  ;

unit-test crc_test
  : # sources
    test/crc_test.cpp
    crc
    /boost/test//boost_unit_test_framework
  : # requirements
    <toolset>gcc-pc
    <target-os>windows
  ;

build-project table ;
